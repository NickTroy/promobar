<% unless @header_promobar.nil? %>

    $('<div class= "header-promo-bar" style="position: fixed; top: 0; width: 100%; line-height: 100%;' +
        ' color: <%= @header_promobar.text_color %>; background: <%= @header_promobar.background_color %>; ' +
        ' font-family: <%= @header_promobar.font_family(@header_promobar.font) %>; ' + 
        ' font-weight: <%= @header_promobar.font_weight %>; ' + 
        ' font-style: <%= @header_promobar.italic %>; ' +
        ' opacity: <%= (100 - @header_promobar.background_opacity) / 100.0 %>; ' +
        ' font-size: <%= @header_promobar.font_size %>px; text-align: center;">' +
        '<h1><%= @header_promobar.text %><h1/></div>').appendTo('body');
<% end %>

<% unless @footer_promobar.nil? %>
    $('<div class= "footer-promo-bar" style="position: fixed; bottom: 0; width: 100%;' +
        ' color: <%= @footer_promobar.text_color %>; background: <%= @footer_promobar.background_color %>; ' +
        ' font-family: <%= @footer_promobar.font_family(@footer_promobar.font) %>; ' + 
        ' font-weight: <%= @footer_promobar.font_weight %>; ' + 
        ' font-style: <%= @footer_promobar.italic %>; ' +
        ' opacity: <%= (100 - @footer_promobar.background_opacity) / 100.0 %>; ' +
        ' font-size: <%= @footer_promobar.font_size %>px; text-align: center;">' +
        '<span><%= @footer_promobar.text %></span><button id="footer-promobar-button"' +
        ' style="border-radius=50%;" type="button">X</button></div>').appendTo('body');
    $('<script type="text/javascript"> ' + 
        '$(document).ready(function { ' +
          '$("#footer-promobar-button").click(function () { ' +
             '$(".footer-promo-bar").hide(); ' + 
          '});   ' +
        '}); ' +
    '</script>').appendTo('head');
<% end %>




