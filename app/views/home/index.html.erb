<% if Promobar.all.any?
     manage_url = edit_promobar_path
   else
     manage_url = new_promobar_path
   end
%>

<script type="text/javascript">
  ShopifyApp.ready(function(){
    ShopifyApp.Bar.initialize({
      title: "Home",
      icon: "<%= asset_path('faveicon.png') %>"
    });
  });
</script>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Promo bars management</h3>
  </div>
  <div class="panel-body">
    <%= link_to 'Manage promo bars', manage_url, class: 'btn btn-primary' %>
  </div>
</div>
