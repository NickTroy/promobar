<% unless @header_promobar.nil? %>

    $('<div class= "header-promo-bar" style="position: fixed; top: 0; width: 100%; line-height: 100%;' +
        ' color: <%= @header_promobar.text_color %>; background: <%= @header_promobar.background_color %>; ' +
        ' font-family: <%= @header_promobar.font_family(@header_promobar.font) %>; ' + 
        ' font-weight: <%= @header_promobar.font_weight %>; ' + 
        ' font-style: <%= @header_promobar.italic %>; ' +
        ' opacity: <%= (100 - @header_promobar.background_opacity) / 100.0 %>; ' +
        ' font-size: <%= @header_promobar.font_size %>px; text-align: center;">' +
        ' <h1  style="display: inline-block;"><%= @header_promobar.text %></h1>' +
        ' <a href="' + '<%= @header_promobar.url_link %>' + '" class="button"><%= @header_promobar.button_text %></a>' +
        ' <button id="header-promobar-button"' +
        ' padding-left: 20px; float: right;" margin-right: 40px;' + 
        ' type="button">X</button></div>').appendTo('body');
    $('<script type="text/javascript"> ' + 
        '$(document).ready(function () { ' +
          '$("#header-promobar-button").click(function () { ' +
             '$(".header-promo-bar").hide(); ' + 
          '});   ' +
        '}); ' +
    '</script>').appendTo('head');
<% end %>

