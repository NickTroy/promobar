<!-- Bar form -->
<%= form_for(@promobar, class: "bar-form", :html => {:onsubmit => "saveButtonText()"}) do |f| %>

  <div class="col-md-12" style="border-bottom: 3px solid #000;margin-bottom: 30px;">
    <% if notice %>
        <div class="alert alert-success" role="alert">
          <%= notice %>
        </div>
    <% end %>

    <% if @promobar.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% @promobar.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <% if flash[:error] %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% flash[:error].each do |error| %>
                <li><%= error %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-2">
      <div class="actions">
        <%= f.submit 'Back', class: "btn btn-primary btn-default", style: "margin-bottom: 25px; width: 50%;" %>
      </div>
    </div>    
  </div>
  

  <div class="row" style="margin-bottom: 25px;">

    <div class="form-group col-md-4">
      <div class="col-md-4">
        <%= label_tag 'promobar[bar_type]', 'SELECT BANNER TYPE:' %>  
      </div>
      <div class="col-md-4">
        <%= f.select :bar_type, { 'HEADER BAR' => 1, 'FOOTER BAR' =>  2 }, { selected: @promobar.bar_type }, { :class => "form-control" } %>  
      </div>
    </div>
    
    <% unless @promobar.promobar_show %>
      <div class="col-md-2">
        <%= f.submit "Display", class: "btn btn-primary", id: "display_bar_button", style: "width: 80%;" %>
      </div>
    <% end %>
    
    <% if @promobar.promobar_show and params[:action] != 'new' %>
      <div class="col-md-2">
        <div class="actions">
          <%= f.submit "Hide", class: "btn btn-warning", id: "hide_bar_button", style: "width: 80%;" %>
        </div>
      </div>
    <% end %>

    <% unless @promobar.id.nil? %>
      <div class="col-md-2">
        <%= link_to 'Delete', promobar_url(@promobar), method: :delete, class: "btn btn-danger", style: "width: 80%;",
                               data: { confirm: 'Are you sure, you want to delete this promo bar?' } %>  
      </div>
    <% end %>
    
    <div class="col-md-2">
      <div class="actions">
        <%= f.submit "Save", class: "btn btn-success", style: "width: 80%;"%>
      </div>
    </div>

  </div>


  <div class="row">

    <div class="col-md-12">
      <div class="form-group">
        <%= label_tag 'promobar[name]', "BANNER TITLE:" %><br>
        <%= f.text_field :name, class: "form-control", placeholder: "ENTER TEXT HERE" %>
      </div>
    </div>

    <div class="col-md-3">
      <div class="form-group">
        <%= label_tag 'promobar[background_color]', "BACKGROUND COLOR" %>
        <%= f.text_field :background_color, class: "form-control bar-background-color" %>
      </div>
    </div>

    <div class="col-md-3">
      <div class="form-group">
        <%= label_tag "OPACITY", "OPACITY" %>
