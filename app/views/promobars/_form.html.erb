<script type="text/javascript">


    $('.bar-background-color').minicolors({
      theme: 'bootstrap',
      defaultValue: $(".bar-background-color").attr("value") || "#000000",
      change: function(value) {
        $('.bar-background-color').attr("value", value)
      }
    });

    $('.button-background-color').minicolors({
      theme: 'bootstrap',
      defaultValue: $(".button-background-color").attr("value") || "#ffffff",
      change: function(value) {
        $('.button-background-color').attr("value", value)
      }
    });

    $('.button-hover').minicolors({
      theme: 'bootstrap',
      defaultValue: $(".button-hover").attr("value") || "#000000",
      change: function(value) {
        $('.button-hover').attr("value", value)
      }
    });



    $( ".bar-opacity-slider" ).slider({
      range: "max",
      min: 1,
      max: 100,
      value: $(".bar-opacity-switcher").attr("value"),
      slide: function(event, ui) {
        $(".bar-opacity-switcher").attr("value", ui.value);
        $(".bar-opacity-value").html(ui.value + "%");
      }
    });

    $('.button_switcher').bind('click', function() {
      if ($('.button_switcher').attr("value") === "BUTTON ON") {
        $('.button_switcher').attr("value", "BUTTON OFF");
      } else {
        $('.button_switcher').attr("value", "BUTTON ON");
      }
   
      if ($('.button_on').attr("value") == "true") {
        $('.button_on').attr("value", "false");
      } else {
        $('.button_on').attr("value", "true");
      }
    });

    

</script>

