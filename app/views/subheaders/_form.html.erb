<%= form_for([@promobar, @subheader], class: "bar-form") do |f| %>

  <div class="col-md-12" style="border-bottom: 3px solid #000;margin-bottom: 30px;">
    <% if notice %>
        <div class="alert alert-success" role="alert">
          <%= notice %>
        </div>
    <% end %>

    <% if @subheader.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% @subheader.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <% if flash[:error] %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% flash[:error].each do |error| %>
                <li><%= error %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
  </div>


  <div class="row">

    <div class="col-md-12">
      <div class="form-group">
        <%= label_tag 'subheader[text]', "BANNER TEXT:" %>
        <%= f.text_area :text, :class => "tinymce form-control", placeholder: "ENTER TEXT HERE" %>
        <%= tinymce %>
        
        

      </div>
    </div>
    
    <div class="col-md-2">
      <div class="actions">
        <%= f.submit "Save", class: "btn btn-success", style: "width: 80%;"%>
      </div>
    </div>

  </div>



<% end %>



