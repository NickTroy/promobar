<h1>Listing buttons</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Shape</th>
      <th>Color</th>
      <th>Hover</th>
      <th>Font</th>
      <th>Size</th>
      <th>Tracking</th>
      <th>Leading</th>
      <th>Font regular</th>
      <th>Font bold</th>
      <th>Font italic</th>
      <th>Text color</th>
      <th>Text animation</th>
      <th>Bar size</th>
      <th>Bar position</th>
      <th>Bar aligment</th>
      <th>Display delay</th>
      <th>Url link</th>
      <th>Blank</th>
      <th>Enable on mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buttons.each do |button| %>
      <tr>
        <td><%= button.text %></td>
        <td><%= button.shape %></td>
        <td><%= button.color %></td>
        <td><%= button.hover %></td>
        <td><%= button.font %></td>
        <td><%= button.size %></td>
        <td><%= button.tracking %></td>
        <td><%= button.leading %></td>
        <td><%= button.font_regular %></td>
        <td><%= button.font_bold %></td>
        <td><%= button.font_italic %></td>
        <td><%= button.text_color %></td>
        <td><%= button.text_animation %></td>
        <td><%= button.bar_size %></td>
        <td><%= button.bar_position %></td>
        <td><%= button.bar_aligment %></td>
        <td><%= button.display_delay %></td>
        <td><%= button.url_link %></td>
        <td><%= button.blank %></td>
        <td><%= button.enable_on_mobile %></td>
        <td><%= link_to 'Show', button %></td>
        <td><%= link_to 'Edit', edit_button_path(button) %></td>
        <td><%= link_to 'Destroy', button, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

